<view class="player-container" style="background:url({{picUrl}}) center/cover no-repeat;"></view>
<view class="player-mask"></view>

<view class="player-info">
  <!-- 封面 -->
  <view class="player-disc {{isPlaying?'play':''}}" hidden="{{isLyricShow}}" bindtap="onChangeLyricShow">
    <image class="player-img rotation {{isPlaying?'':'rotation-paused'}} " src="{{picUrl}}"></image>
  </view>
  <!-- 歌词 -->
  <y-lyric isLyricShow="{{!isLyricShow}}" bindtap="onChangeLyricShow" lyric="{{lyric}}" />
  <!-- 进度条 -->
  <view class="process-bar">
    <y-process-bar bind:musicEnd="onNext" />
  </view>
  <!-- 控制面板 -->
  <view class="control">
    <text class="iconfont icon-shangyishoushangyige" bindtap="onPrev"></text>
    <text class="iconfont {{isPlaying?'icon-plus-pause':'icon-bofang'}}" bindtap="togglePlaying"></text>
    <text class="iconfont icon-xiayigexiayishou" bindtap="onNext"></text>
  </view>

</view>